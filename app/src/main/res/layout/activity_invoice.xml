<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.picky.app.mapdemo.Invoice"
    android:background="#e6e6e6"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/hazinehdetail"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/frame"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/textView6"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هزینه حمل بار"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="35000 تومان"
                fontPath="font/yekan.ttf"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/lineBraker"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView6"
                android:background="#e6e6e6"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/textView8"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هزینه کارگر"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="45000 تومان"
                android:textColor="#000"
                fontPath="font/yekan.ttf"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/lineBraker2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView9"
                android:background="#e6e6e6"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/textView10"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هزینه اقلام سنگین"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="10000 تومان"
                android:textColor="#000"
                fontPath="font/yekan.ttf"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/lineBraker3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView10"
                android:background="#e6e6e6"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/textView12"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هزینه طبقات"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="20000 تومان"
                android:textColor="#000"
                fontPath="font/yekan.ttf"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/lineBraker4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView12"
                android:background="#e6e6e6"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/textView14"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیمه"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="ندارد"
                android:textColor="#000"
                fontPath="font/yekan.ttf"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/lineBraker5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView14"
                android:background="#e6e6e6"

                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hazinehkol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/frame"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hazinehdetail">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView16"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مبلغ کل"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView16"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="135000 تومان"
                android:textColor="#000080"
                fontPath="font/yekan.ttf"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                android:paddingBottom="16dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/takhfifLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/frame"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hazinehkol">

        <EditText
            android:id="@+id/takhfifValue"
            fontPath="font/yekan.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#e6e6e6"
            android:focusedByDefault="false"

            android:hint="کد تخفیف را وارد کنید"
            android:padding="3dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            tools:ignore="MissingPrefix,RtlCompat" />
        <Button
            android:id="@+id/takhfifButton"
            fontPath="font/yekan.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0.4"
            android:background="#fff"
            android:stateListAnimator="@null"
            android:text="اعمال کد تخفیف"
            android:textColor="#000080"
            android:textSize="18sp"
            android:textStyle="bold"

            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/frame"
        android:orientation="vertical"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takhfifLinear">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="1"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/textView18"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:padding="5dp"
                android:text="پرداخت کننده"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/textView19"
                fontPath="font/yekan.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:padding="5dp"
                android:text="برای بعدا رزرو میکنم"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                android:textAlignment="center"
                />

        </GridLayout>

        <Button
            android:id="@+id/requestSubmit"
            fontPath="font/yekan.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#37648d"
            android:focusable="true"
            android:stateListAnimator="@null"
            android:text="ثبت درخواست"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="MissingPrefix"
            android:radius="8dp"

            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

</ScrollView>